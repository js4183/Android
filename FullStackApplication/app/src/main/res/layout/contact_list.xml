<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgContact"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_my_calendar" />

    <TextView
        android:id="@+id/tvContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="이름"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imgContact"
        app:layout_constraintTop_toTopOf="@+id/imgContact" />

    <TextView
        android:id="@+id/tvContactAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="21세"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvContactName"
        app:layout_constraintStart_toEndOf="@+id/tvContactName"
        app:layout_constraintTop_toTopOf="@+id/tvContactName" />

    <TextView
        android:id="@+id/tvContactTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:text="010-1234-5678"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgContact"
        app:layout_constraintStart_toEndOf="@+id/imgContact"
        app:layout_constraintTop_toBottomOf="@+id/tvContactName" />

    <Button
        android:id="@+id/btnContactCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/button_radius_yellow"
        android:text="전화걸기"
        app:layout_constraintBottom_toBottomOf="@+id/tvContactAge"
        app:layout_constraintStart_toEndOf="@+id/tvContactAge"
        app:layout_constraintTop_toTopOf="@+id/tvContactAge" />
</androidx.constraintlayout.widget.ConstraintLayout>